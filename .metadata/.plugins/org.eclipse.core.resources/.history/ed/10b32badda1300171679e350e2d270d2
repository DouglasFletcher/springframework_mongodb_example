package com.dbconnect.example.test;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.context.annotation.ComponentScan;

@ComponentScan
public class Robot {

	private String id;
	private String speech;
	private Legs legs;
	
	public Robot (String id, String speech){
		this.id = id;
		this.speech = speech;
	}

	@Autowired
	public void setLegs(Legs legs){
		this.legs = legs;
	}
	
	public void speak(){
		System.out.println("Robot: " + id + " - tells us: " + speech); 
	}
	
	
}
